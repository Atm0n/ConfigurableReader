<Window x:Class="ConfigurableReader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Single Line Reader" Height="350" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="10">
            <Button Content="Open File" Click="OpenFileButton_Click" Margin="5" />
            <Button Content="Start" Click="StartButton_Click" Margin="5" />
            <Button Content="Pause" Click="PauseButton_Click" Margin="5" />
            <TextBlock Text="Speed:" VerticalAlignment="Center" Margin="5" />
            <Slider x:Name="SpeedSlider" Minimum="0.1" Maximum="500" ValueChanged="SpeedSlider_ValueChanged" Margin="5" Width="300" />
            <TextBlock Text="Text Color:" VerticalAlignment="Center" Margin="5" />
            <ComboBox x:Name="ColorComboBox" SelectionChanged="ColorComboBox_SelectionChanged" Margin="5" Width="100">
                <ComboBoxItem Content="Black" />
                <ComboBoxItem Content="Red" />
                <ComboBoxItem Content="Green" />
                <ComboBoxItem Content="Blue" />
            </ComboBox>
            <TextBlock Text="Font Size:" VerticalAlignment="Center" Margin="5" />
            <Slider x:Name="FontSizeSlider" Minimum="10" Maximum="300" ValueChanged="FontSizeSlider_ValueChanged" Margin="5" Width="100" />
        </StackPanel>
        <ScrollViewer x:Name="ScrollViewer" HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Hidden" Grid.Row="1">
            <TextBlock x:Name="TextBlock" TextWrapping="NoWrap" FontSize="16"/>
        </ScrollViewer>
    </Grid>
</Window>
