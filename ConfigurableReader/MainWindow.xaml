<Window x:Class="ConfigurableReader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Single Line Reader" Height="Auto" Width="Auto" Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="10">
            <Button Content="Open File" Click="OpenFileButton_Click" Margin="5" />
            <Button Content="Start" Click="StartButton_Click" Margin="5" />
            <Button Content="Pause" Click="PauseButton_Click" Margin="5" />
            <TextBlock Text="Speed:" VerticalAlignment="Center" Margin="5" />
            <Slider x:Name="SpeedSlider" Minimum="0" Maximum="10" ValueChanged="SpeedSlider_ValueChanged" Margin="5" Width="300" />
            <xctk:ColorPicker x:Name="ColorPicker" SelectedColorChanged="ColorPicker_SelectedColorChanged" />
            <xctk:ColorPicker x:Name="BackgroundColorPicker" SelectedColorChanged="BackgroundColorPicker_SelectedColorChanged" />
            <TextBlock Text="Font Size:" VerticalAlignment="Center" Margin="5" />
            <xctk:IntegerUpDown x:Name="FontSizeSlider" AllowTextInput="True" Minimum="10" Maximum="600" ValueChanged="FontSizeSlider_ValueChanged" Margin="5" Width="100" />
        </StackPanel>
        <ScrollViewer x:Name="ScrollViewer" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden"  Grid.Row="1">
            <TextBlock x:Name="TextBlock" TextWrapping="NoWrap" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </ScrollViewer>
    </Grid>
</Window>
